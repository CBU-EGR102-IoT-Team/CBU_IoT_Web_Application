/*Color Pallet
Dark (Grey): #2C3E50
Light (White): #ECF0F1
Primary (Red): #E74C3C

Secondary 1 (Light Blue): #3498DB
Secondary 1 (Blue): #2980B9
*/

/*------------------------------
MASTER CLASSES AND ELEMENTS
USED FOR BASIC FUNCTIONALITY
------------------------------*/
@import url('https://fonts.googleapis.com/css2?family=Mulish:wght@400;500&display=swap');

/*Used to hide elements from the page*/
.hidden{
    display: none;
}

/*Setting Background Color so it looks find with over scrolling*/
body{
    background-color: #08243b !important;
}

.window {
    background-color: #f1f1f1 !important;
    border-radius: 30px !important;
    font-family: 'Mulish', sans-serif !important;
    font-weight: 500;
    box-shadow: 2px 5px 10px 0 rgba(0, 0, 0, 0, 0.16);
    font-size: 20px;
}


/*------------------------------
CONNECT SECTION OF THE
WEB APPLICATION PAGE
------------------------------*/
#connect_page{
    display: flex;
    flex-direction: column;
    height: 100vh;
    width: 100vw;
    justify-content: center;
    background: #08243b;
    color: #ECF0F1;
    background-image: linear-gradient(179deg, #1c2471 77%, #ff394c 97%);
}

.connect_page_welcome{
    padding-top: 5%;
    font-family: 'Mulish', sans-serif;
    align-self: center;
    text-align: center;
    height: 70%;
}

/*Used to format the centering of thetext H1 tags
and HTML form on the connect page.*/
.connect_contents{
    display: flex;
    align-self: center;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    height: 25%;
}

/*Used to format the HTML form on the connect page.*/
.form_contents{
    display: flex;
    flex-direction: column;
    justify-content: center !important;
    width: 100%;
}

.submit-wrapper{
    width: 30%;
}


/*Used to format anything with the class "submit" within the HTML form
on the connect page. padding: 15px 73px 16px 72px;*/
.submit{
    align-self: center;
    width: 231px;
    height: 51px;
    margin: 70px 0 12px;
    
    color: #ecf0f1;
    background-color: #7a7ec2 !important;
    border-color: transparent !important;
    border-radius: 30px;
}

.submit:hover{
    border-color: transparent !important;
}

.submit:active{
    border-color: transparent !important;
}

.submit:focus{
    border-color: transparent !important;
}

/*Used to format anything with the class "textfield" within the HTML form
on the connect page.*/
.textfield{
    width: 80%;
    outline: none;
    color: #ECF0F1;
    background-color: transparent;
    border-top-color: transparent;
    border-left-color: transparent;
    border-right-color: transparent;
    border-bottom-color: #ff394c;
}

/*TODO Adjust to be dynamic, just took the defaults from the Zeplin*/
    .app-title {
      font-family: 'Mulish', sans-serif;  
      text-align: left;

    }
        
    .submit-prompt {
      width: 172px;
      height: 15px;
      font-family: 'CenturyGothicPro';
      font-size: 15px;
      font-weight: normal;
      font-stretch: normal;
      font-style: normal;
      line-height: normal;
      letter-spacing: normal;
      text-align: left;
      color: #7a7ec2;
    }

    .bot-help {
      width: 86px;
      height: 15px;
      font-family: CenturyGothicPro;
      font-size: 15px;
      font-weight: normal;
      font-stretch: normal;
      font-style: normal;
      line-height: normal;
      letter-spacing: normal;
      text-align: left;
      color: #f1f1f1;
    }

/*Removes the auto formating for auto fill*/
input:-webkit-autofill,
input:-webkit-autofill:hover,
input:-webkit-autofill:focus,
textarea:-webkit-autofill,
textarea:-webkit-autofill:hover,
textarea:-webkit-autofill:focus,
select:-webkit-autofill,
select:-webkit-autofill:hover,
select:-webkit-autofill:focus {
    background: #000000 !important;
}

/*Removing some basic default Chrome web kits that force certain formating
so that ours can overwrite it.*/
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}
input[type=number] {
    -moz-appearance: textfield;
}

/*------------------------------
DATA SECTION OF THE
WEB APPLICATION PAGE
------------------------------*/
#data_page{
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: center;
    background-image: linear-gradient(179deg, #1c2471 77%, #ff394c 97%);
}

/*Header of the data page. Where the Bot ID is displayed*/
#data_header{
    display: flex;
    flex-direction: column;
    height: 15vh;
    width: 94%;
    justify-content: flex-start;
    align-items: center;
    color: #ECF0F1;
}

/*The top three windows are contained within this div tag*/
#data_top{
    height: 39vh;
    width: 94% !important;
    display: flex;
    flex-direction: row;
    justify-content:  space-between;
}

/*Distance sensor graphs and data display section.*/
#distance_data{
    display: flex;
    flex-direction: column;
    height: 100%;
    padding-left: 0px;
    padding-right: 0px;
    justify-content: flex-start;
}

.distance_data_header{
    height: 20%;
    text-align:center;
    display:flex;
    color: #0c108e;
}

.distance_data_body{
    height: 80%;
    text-align:center;
    display:flex;
    align-items: center;
    color: white;
    justify-content: center;
}


#distance_window{
    height: 100%;
    width: 50%;
}

/*Contains the tools and light windows*/
#data_top_right{
    height: 100%;
    width: 40%;
}

#tools_window{
    display: flex;
    flex-direction: column;
    height: 38%;
    width: 100%;
}

#light_window{
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    height: 62%;
    width: 100%;
}

#data_bottom {
    height:18vh;
    width: 94%;
    display: flex;
    
}

/*Light sensor graphs and data display section.*/
#light_data{
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 50%;
    padding-right: 0px;
    margin-top: 2%;
    justify-content: flex-start;
    color: #ECF0F1;
}

.light_data_header{
    height: 40% !important;
    width: 100% !important;
    text-align: center;
    display:flex;
    justify-content: flex-start;
    color: #0c108e;
}
 
.light_data_body{
    height: 60% !important;
    width: 100% !important;
    text-align:center;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

/*Voltage sensor graphs and data display section.*/
#voltage_data{
    display: flex;
    flex-direction: column;
    height: 23%;
    width: 92%;
    margin-top: 2%;
    padding-left: 0px;
    padding-right: 0px;
    justify-content: flex-start;
    background-color: #08263c;
    color: #ECF0F1;
}

.voltage_data_header{
    height: 20%;
    text-align:center;
    display:flex;
    align-items: flex-end;
    color: white;
    background-color: #f04e51;
}

.voltage_data_body{
    height: 80%;
    text-align:center;
    display:flex;
    align-items: center;
    color: white;
    justify-content: center;
}

/*Footer of the data page. Where the various buttons are*/
#data_footer{
    display: flex;
    flex-direction: column;
    height: 10.5%;
    margin-top: 2%;
    width: 92%;
    padding-left: 0px;
    padding-right: 0px;
    justify-content: center;
    align-items: center;
    background-color: #08243b;
    color: #ECF0F1;
}

.data_footer_buttons{
    display: flex;
    flex-direction: row;
    height: 100%;
    width: 100%;
    justify-content: center;
    align-items: flex-start;
    z-index: 1;
}

.data_footer_notification{
    position: fixed;
    left: 50%;
    transform: translate(-50%, 0);
    z-index: 0;
}

.disconnectDeviceButton{
    width: 100%;
    height: 50%;
    color: #ECF0F1;
}

.dataSnapshotButton{
    width: 100%;
    height: 50%;
    color: #ECF0F1;
    margin-left: 5%;
}

.dataRefreshButton{
    width: 15%;
    height: 50%;
    color: #ECF0F1;
    background-color: #2C3E50 !important;
    border-color: transparent !important;
    margin-left: 5%;
}

/*------------------------------
CAPTURE SECTION OF THE
WEB APPLICATION PAGE
------------------------------*/
#capture_page{
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: flex-start;
    background-color: #08243b;
}

.capture_parent{
    margin-top: 5%;
    height: 20vh;
    width: 92vw;
    display: flex;
    flex-direction: row;
}

.capture_data_slice {
    flex: 1;
    
    display: flex;
    flex-direction: column;
}

.separator {
    position: relative;
    width: 2px;
    height: 100%;
}

.capture_graph{
    display: flex;
    flex-direction: row;
    height: 100%;
    width: 30%;
}